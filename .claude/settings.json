{
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bundle exec rspec --fail-fast"
          }
        ]
      }
    ]
  }
}
